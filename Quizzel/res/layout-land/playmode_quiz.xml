<?xml version="1.0" encoding="utf-8"?>
	<LinearLayout 
	xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:gravity="center_horizontal">
	    
    <TextView
        android:id="@+id/frage"
        android:layout_width="match_parent"
        android:layout_height="40sp"
        android:layout_marginBottom="5dp"
        android:text="Spielmodus auwählen"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
     	></TextView>
    
    <TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/normalgmode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="comic sans"
                android:text="Normales Spiel"
                android:textStyle="bold" >
</Button>
            
            <Button
                android:id="@+id/timemode"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="Spiele gegen die Zeit"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
                 
            </TableRow>                

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/lifemode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Überlebensmodus"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/friendmode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Spiel gegen Freund"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/categorymode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Spiele verschiedene Kategorien"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>
        
    </TableLayout>

    
</LinearLayout>
