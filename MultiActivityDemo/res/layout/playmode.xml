<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="20dp" >
    
     <TextView
         android:id="@+id/frage"
         android:layout_width="280dp"
         android:layout_height="wrap_content"
         android:layout_marginBottom="5dp"
         android:layout_marginTop="10dp"
         android:padding="20dp"
         android:text="Spielmodus auwählen"
         android:textColor="#FFFFFF"
         android:textSize="20dp"
         android:textStyle="bold" >
</TextView>
    
    <TableLayout 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/normalmode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Normales Spiel"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>                
        
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/timemode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Spiele gegen die Zeit"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
      
        </TableRow>
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/lifemode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Überlebensmodus"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/friendmode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Spiel gegen Freund"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>

        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/categorymode"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Kategorie auswählen"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>
        
         <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/highscore"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Zeige Highscore-Liste"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>
        
        <TableRow 
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/helpus"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="Help us develop our App"
                android:fontFamily="comic sans"
                android:textStyle="bold"
                android:layout_marginBottom="10dp"></Button>
            </TableRow>
        
    </TableLayout>

</LinearLayout>
